%li.collection-item.avatar
  %i.material-icons.circle today
  .title= event.summary
  %p
    = duration_with_location_to_s(event)
    %br
    = event.description

  .secondary-content
    - if can?(:edit, event)
      .fixed-action-btn.horizontal
        = link_to [:edit, event], class: "btn-floating btn-medium green" do
          %i.material-icons mode_edit
