.header
  %h2= t_model(resource_class)
  %div(style="position: relative")
    .fixed-action-btn.horizontal
      = link_to url_for(action: :new), class: "btn-floating btn-large blue" do
        %i.large.material-icons add

- if resource_class.respond_to?(:by_text)
  = render 'list_search'

%ul.collection.collapsible
  - collection.each do |team|
    %li
      .collapsible-header
        .collection-item.avatar
          = image_tag team.avatar_url, class: 'circle'
          .title= link_to team.to_s, team
          %p
            = team.description
          .secondary-content
            - if can? :edit, team
              = link_to(edit_team_path(team)) do
                %i.material-icons mode_edit
            - if can? :delete, team
              = link_to team, method: :delete, data: { confirm: 'Are you sure?' } do
                %i.material-icons delete
      .collapsible-body
        = render 'vcards/collapsible_notperson', vcard: team.vcard


= paginate collection
