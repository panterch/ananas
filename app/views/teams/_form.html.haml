= simple_form_for resource do |f|
  .row
    .col.s12
      .card.z-depth-1
        .card-content
          = f.input :description
        .card-action
          = f.button :submit

    .col.s12.m4
      .card.medium.z-depth-1
        .card-image.full
          %img{name: 'team[avatar]', alt: "no avatar uploaded yet", src: resource.avatar.url }/
        .card-action
          = f.input :avatar, as: :image_preview, label: 'upload avatar', label_html: { class: 'waves-effect waves-light btn waves-input-wrapper' }

    .col.s12.m8
      .card.z-depth-1
        .card-content
          %span.card-title Contact information
          = render 'vcards/form', f: f, full_name: true, address_only: true
        .card-action
          = f.button :submit

- if resource.persisted?
  .section_divider
  .section
    %h4= t_title(:index, Mentoring)
    %div(style="position: relative")
      .fixed-action-btn.horizontal(style="position: absolute")
        = link_to new_team_mentoring_path(resource), remote: true, class: "btn-floating btn-large blue" do
          %i.large.material-icons add
    = render 'list', collection: resource.mentorings.upcoming, resource_class: Mentoring

  .section_divider
  .section
    %h4= t_title(:index, Member)
    %div(style="position: relative")
      .fixed-action-btn.horizontal(style="position: absolute")
        = link_to new_team_team_member_path(resource), remote: true, class: "btn-floating btn-large blue" do
          %i.large.material-icons add
    = render 'list', collection: resource.members, resource_class: Member

  .section_divider
  .section
    %h4= t_model Mentor
    %div(style="position: relative")
      .fixed-action-btn.horizontal(style="position: absolute")
        = link_to new_team_team_mentor_path(resource), remote: true, class: "btn-floating btn-large blue" do
          %i.large.material-icons add
    = render 'list', collection: resource.mentors, resource_class: Mentor

  = render 'users/profile'
