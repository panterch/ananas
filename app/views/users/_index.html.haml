.row
  .col.s12
    %ul.tabs
      %li.tab.col.s3
        = link_to 'No user', '#new'
      %li.tab.col.s3
        = link_to 'Never signed in', '#unconfirmed'
      %li.tab.col.s3
        = link_to 'All', '#all'

#new
  = render 'profile_list', collection: @profiles_with_no_user

#unconfirmed
  = render 'list', collection: collection.where(sign_in_count: 0)

#all
  = render 'list', collection: collection
