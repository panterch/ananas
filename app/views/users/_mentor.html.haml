%li.collection-item.avatar
  = image_tag mentor.avatar_url, class: 'circle'
  .title= mentor
  %p
    = t_model mentor.class
  .secondary-content
    - if can?(:new, mentor.class)
      .fixed-action-btn.horizontal
        = link_to create_for_mentor_users_path(user: {profile_id: mentor.id, profile_type: mentor.class}), remote: true, method: :post, class: "btn-floating blue" do
          %i.large.material-icons add
