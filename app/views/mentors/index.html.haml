.header
  %h2= t_model(resource_class)
  %div(style="position: relative")
    .fixed-action-btn.horizontal(style="position: absolute")
      = link_to url_for(action: :new), class: "btn-floating btn-large blue" do
        %i.large.material-icons add

%ul.collection
  - collection.each do |mentor|
    %li.collection-item.avatar
      = image_tag mentor.avatar, class: 'circle'
      .title= link_to mentor.job_title, mentor
      %p= mentor.who_i_am
      %p= mentor.experience

= paginate collection
