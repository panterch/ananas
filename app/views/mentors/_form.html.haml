.section
  = simple_form_for resource do |f|
    - if defined?(team_id) && team_id.present?
      = hidden_field_tag :team_id, team_id

    .row= f.input :job_title
    .row= f.input :who_i_am
    .row= f.input :experience
    .row= f.input :interests
    .row= f.input :motivation
    .row.input-field.col.s12
      = f.label :avatar, class: 'file-field input-field'
      .row.col
        = f.input :avatar, as: :image_preview, label: 'upload avatar', label_html: { class: 'waves-effect waves-light btn waves-input-wrapper' }
    .row
      %img.col.s3#img_prev{alt: "no avatar uploaded yet", src: resource.avatar.url }/

    = render 'vcards/form', f: f

    .row
      .col.s12= f.button :submit

- if resource.persisted?
  .section_divider
  .section
    %h4= t_title(:index, ExpertSession)
    %div(style="position: relative")
      .fixed-action-btn.horizontal(style="position: absolute")
        = link_to new_mentor_expert_session_path(resource), remote: true, class: "btn-floating btn-large blue" do
          %i.large.material-icons add
    = render 'list', collection: resource.expert_sessions.upcoming, resource_class: ExpertSession

  .section_divider
  .section
    %h4= t_title(:index, Mentoring)
    %div(style="position: relative")
      .fixed-action-btn.horizontal(style="position: absolute")
        = link_to new_team_mentoring_path(resource), remote: true, class: "btn-floating btn-large blue" do
          %i.large.material-icons add
    = render 'list', collection: resource.mentorings.upcoming, resource_class: Mentoring

  .section_divider
  .section
    %h4= t_title(:index, Team)
    = render 'list', collection: resource.teams, resource_class: Team

  = render 'users/profile'
