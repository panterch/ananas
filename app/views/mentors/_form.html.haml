.section
  = simple_form_for resource do |f|
    - if defined?(team_id) && team_id.present?
      = hidden_field_tag :team_id, team_id

    .row= f.input :job_title
    .row= f.input :who_i_am
    .row= f.input :experience
    .row= f.input :interests
    .row= f.input :motivation
    .row.input-field.col.s12
      = f.label :avatar, class: 'file-field input-field'
      .row.col
        = f.input :avatar, as: :image_preview, label: 'upload avatar', label_html: { class: 'waves-effect waves-light btn waves-input-wrapper' }
    .row
      %img.col.s3#img_prev{alt: "no avatar uploaded yet", src: resource.avatar.url }/

    = render 'vcards/form', f: f

    .row
      .col.s12= f.button :submit

- if resource.persisted?
  .section_divider
  .section
    %h4= t_title(:index, Team)
    = render 'teams/list', collection: resource.teams

  - if resource.user
    .section_divider
    .section
      %h4= t_model(User)
      = render 'users/list', collection: [ resource.user ]
