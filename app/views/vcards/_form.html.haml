.row
  = f.simple_fields_for :vcard do |vcard|
    - if defined?(full_name)
      = vcard.input :full_name, wrapper: :full
    - elsif !defined?(address_only)
      = vcard.input :family_name, wrapper: :halve
      = vcard.input :given_name, wrapper: :halve
    = vcard.fields_for :address do |address|
      = address.input :extended_address, wrapper: :halve
      = address.input :street_address, wrapper: :halve
      = address.input :postal_code, wrapper_class: 'input-field col s2'
      = address.input :locality, wrapper_class: 'input-field col s4'
      = address.input :post_office_box, wrapper: :halve

